<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="@android:color/white"
    tools:context="com.xoverto.activeaberdeen.OpportunityActivity$PlaceholderFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

        <TextView
            android:id="@+id/warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/information_warning"
            android:padding="10dp"
            style="@style/Warning"/>

        <View
            android:id="@+id/warning_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/warning"
            android:background="@color/light_grey"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_below="@+id/warning_line"
            android:layout_centerHorizontal="true"
            android:background="@android:color/black" />


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:text="Title"
            android:padding="10dp"
            style="@style/HeadlineTitle"
             />

        <TextView
            android:id="@+id/venue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:drawableLeft="@drawable/icon_location_black"
            android:drawablePadding="5dip"
            android:text="Venue"
            style="@style/Detail"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp" />

        <TextView
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/venue"
            android:drawableLeft="@drawable/icon_time_blue"
            android:drawablePadding="5dip"
            android:text="start time"
            style="@style/Detail"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp" />

        <View
            android:id="@+id/description_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/start_time"
            android:background="@color/light_grey"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description_line"
            android:text="description"
            android:padding="10dp"
            style="@style/Detail" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/description"
            android:background="@color/light_grey"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:drawableLeft="@drawable/icon_location_black"
            android:drawablePadding="5dip"
            android:text="Address"
            style="@style/Detail"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp" />

        <TextView
            android:id="@+id/telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:drawableLeft="@drawable/icon_phone"
            android:drawablePadding="5dip"
            android:text="Telephone"
            style="@style/Detail"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp" />

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/telephone"
                android:id="@+id/map"
                tools:context="com.xoverto.activeaberdeen.MapsActivity"
                android:name="com.google.android.gms.maps.SupportMapFragment"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
